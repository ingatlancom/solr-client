{
    "name": "ingatlancom/solr-client-symfony",
    "description": "Solr API client using the JSON API.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.2.5",
        "ext-json": "*",
        "symfony/http-client-contracts": "^1.1|^2.0",
        "symfony/polyfill-php80": "^1.15"
    },
    "require-dev": {
        "phpro/grumphp-shim": "^0.18.0",
        "phpunit/phpunit": "^8.5",
        "psalm/phar": "^3.10",
        "symfony/http-client": "^4.3|^5.0",
        "symplify/easy-coding-standard-prefixed": "^7.2"
    },
    "autoload": {
        "psr-4": { "iCom\\SolrClient\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "iCom\\SolrClient\\Tests\\": "tests/" }
    },
    "scripts": {
        "test-lower": [
            "@composer update --ansi --prefer-lowest --prefer-stable",
            "@php vendor/bin/phpunit --colors=always"
        ],
        "test-upper": [
            "@composer update --ansi",
            "phpdbg -qrr vendor/bin/phpunit --coverage-html=build/coverage/coverage-html --coverage-xml=build/coverage/coverage-xml --coverage-clover=build/coverage/clover.xml --log-junit=build/coverage/junit.xml --coverage-text",
            "[ -e build/bin/infection ] || curl -L https://github.com/infection/infection/releases/download/0.16.1/infection.phar -o build/bin/infection",
            "PHP_BINARY=phpdbg phpdbg -qrr build/bin/infection --skip-initial-tests --coverage=build/coverage --min-msi=84 --min-covered-msi=86 --threads=$(nproc) --no-progress --show-mutations --ansi --log-verbosity=all || true"
        ],
        "tests": ["@test-lower", "@test-upper"],
        "sa": [
            "[ -e build/bin/phpstan ] || curl -L https://github.com/phpstan/phpstan/releases/download/0.11.19/phpstan.phar -o build/bin/phpstan",
            "php build/bin/phpstan analyse src tests -l 7 --no-progress --ansi || true",
            "@php vendor/bin/psalm.phar --show-info=true"
        ],
        "cs": [
            "@php vendor/bin/ecs c --ansi"
        ],
        "sc": [
            "[ -e build/bin/security-checker ] || curl -L https://get.sensiolabs.org/security-checker.phar -o build/bin/security-checker",
            "php build/bin/security-checker security:check"
        ],
        "all": ["@tests", "@sa", "@cs", "@sc"]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
